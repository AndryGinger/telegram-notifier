!!!
%html.h-100
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title TelegramNotifier
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body.h-100.telegram-background
    = render "layouts/flash"

    - if current_admin
      %nav.navbar.navbar-dark.bg-dark.fixed-top
        %ul.nav.nav-pills.nav-fill
          %li.nav-item
            = link_to 'Telegram Messages', root_path, class: "nav-link #{'active' if current_page?('/')}"
          %li.nav-item
            = link_to 'Chats', chats_manage_index_path,
                                           class: "nav-link #{'active' if current_page?('/chats/manage')}"

      .container.h-100
        = yield
    - else
      = yield
